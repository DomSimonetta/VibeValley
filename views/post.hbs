<div class="row mb-4 playlist">
  <div class="col-md-12 text-center bg-primary text-white pt-3 pb-2">
    <h3>{{playlist.title}}</h3>
    <p>Created by {{playlist.user.username}}</p>
  </div>
  <div class="col-md-12 text-center pt-3">
    <p>~ Mood ~ {{playlist.mood}}</p>
    <p>{{playlist.description}}</p>
  </div>
</div>
{{#if comments.length}}
{{#each comments as |comment| }}
<div class="row post">
    <div class="pt-3 ps-4">
        <p>{{comment.text}}</p>
        <p>â€“ {{comment.user.username}}</p>
    </div>
</div>
<hr>
{{/each}}
{{/if}}
<div class="row playlist">
    <div class="col-md-12 text-center bg-primary text-white pt-3 pb-2">
        <h4>Add Comment</h4>
    </div>
    <div class="col-md-12 pt-3 ps-4">
        <form class="leave-comment">
        <input type="hidden" id="post-id" value="{{post.id}}"/>
        <textarea class="comment-input" type="text" id="leave-comment"></textarea>
        <div class="d-flex justify-content-center p-3">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
        </form>
    </div>
</div>

